# Example Apache config for deploying the PHP API under a subfolder.
# Copy to ".htaccess" in your deployed folder if Hostinger uses Apache.

Options -Indexes

# Deny direct access to non-public folders/files
<IfModule mod_authz_core.c>
  <DirectoryMatch "(^|/)(config|database|scripts|src)(/|$)">
    Require all denied
  </DirectoryMatch>

  <FilesMatch "^(composer\.(json|lock)|\.env|\.env\..+)$">
    Require all denied
  </FilesMatch>
</IfModule>

<IfModule !mod_authz_core.c>
  <DirectoryMatch "(^|/)(config|database|scripts|src)(/|$)">
    Order allow,deny
    Deny from all
  </DirectoryMatch>

  <FilesMatch "^(composer\.(json|lock)|\.env|\.env\..+)$">
    Order allow,deny
    Deny from all
  </FilesMatch>
</IfModule>

# OPTIONAL: if your host supports SetEnv, you can configure production here.
# NEVER commit secrets into git; do this only on the server.
